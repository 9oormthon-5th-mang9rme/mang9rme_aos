<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_card_stone_stat">

    <TextView
        android:id="@+id/item_card_stone_stat_tv_stone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/c_262525"
        android:fontFamily="@font/yangjin"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="현무암" />

    <ImageView
        android:id="@+id/item_card_stone_stat_btn_modify_name"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_modify_stone_name"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/item_card_stone_stat_tv_stone_name"
        app:layout_constraintBottom_toBottomOf="@id/item_card_stone_stat_tv_stone_name"
        app:layout_constraintStart_toEndOf="@id/item_card_stone_stat_tv_stone_name" />


</androidx.constraintlayout.widget.ConstraintLayout>