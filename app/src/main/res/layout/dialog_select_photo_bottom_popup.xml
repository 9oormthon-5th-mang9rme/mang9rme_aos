<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="36dp">

    <TextView
        android:id="@+id/tv_selectPhoto_fromCamera"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/back_enroll_select_photo_top"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="카메라로 촬영"
        android:textColor="@color/gray_800"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/view_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_200"
        app:layout_constraintBottom_toTopOf="@id/tv_selectPhoto_fromGallery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selectPhoto_fromCamera" />

    <TextView
        android:id="@+id/tv_selectPhoto_fromGallery"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/back_enroll_select_photo_bottom"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="앨범에서 선택"
        android:textColor="@color/gray_800"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>